}
.empty{
  color:#0099FF;
  align-items: center;
  margin-top: 180px;
}
.itemnum{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 20px;
  margin-top: 20px;
  margin-left: 1px;
}
.submit {
  color:#ffffff;
  background-color: #0099FF;
  margin-top: 360px;
}
.result{
  font-size: 16px;
  line-height: 30px;
}
.blank{
  background-color: #0099FF;
  border-radius: 3px;
  height: 25px;
  line-height: 25px;
}
